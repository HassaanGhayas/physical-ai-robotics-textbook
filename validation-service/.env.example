# Validation Service Configuration
# Copy this file to .env and customize as needed

# Application Settings
APP_NAME=validation-service
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Feature Flags
ENABLE_QUALITY_VALIDATION=true
ENABLE_TEST_EXECUTION=true
ENABLE_DEPLOYMENT_VALIDATION=true

# Pipeline Settings
PIPELINE_TIMEOUT_MINUTES=15
FAIL_FAST=false

# Quality Settings
QUALITY_MAX_LINE_LENGTH=100
QUALITY_ENABLE_SECURITY_SCAN=true
QUALITY_MAX_CYCLOMATIC_COMPLEXITY=10
QUALITY_MAX_COGNITIVE_COMPLEXITY=15
QUALITY_MIN_MAINTAINABILITY_INDEX=20.0
QUALITY_MIN_COVERAGE_PERCENTAGE=80.0

# Testing Settings
TESTING_PARALLEL_EXECUTION=true
TESTING_MAX_WORKERS=4
TESTING_TIMEOUT_SECONDS=300
TESTING_FLAKY_DETECTION_ENABLED=true
TESTING_FLAKY_MIN_RUNS=10
TESTING_FLAKY_PASS_THRESHOLD=0.8
TESTING_FLAKY_CONFIDENCE_LEVEL=0.95
TESTING_RETRY_FLAKY_TESTS=true
TESTING_MAX_RETRIES=3

# Deployment Settings
DEPLOYMENT_VALIDATE_ENV_VARS=true
DEPLOYMENT_VALIDATE_SECRETS=true
DEPLOYMENT_CHECK_VULNERABILITIES=true
DEPLOYMENT_CHECK_OUTDATED=true
DEPLOYMENT_VULNERABILITY_SEVERITY_THRESHOLD=medium
DEPLOYMENT_CHECK_RESOURCE_REQUIREMENTS=true

# Storage Settings
STORAGE_DATA_DIR=.validation-data
STORAGE_RESULTS_DIR=.validation-data/results
STORAGE_HISTORY_DIR=.validation-data/history
STORAGE_RETENTION_DAYS=30
STORAGE_MAX_HISTORY_ENTRIES=1000

# API Settings
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false
API_RELOAD=false
API_RATE_LIMIT_REQUESTS=100
