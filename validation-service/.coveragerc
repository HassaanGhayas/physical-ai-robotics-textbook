[run]
source = src
branch = True
parallel = True
omit =
    */tests/*
    */__pycache__/*
    */migrations/*
    */.venv/*
    */venv/*
    setup.py
    conftest.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise NotImplementedError
    raise AssertionError
    if TYPE_CHECKING:
    if __name__ == .__main__.:
    @abstractmethod
    @abc.abstractmethod
    pass
    ...

ignore_errors = True
show_missing = True
precision = 2

# Fail if coverage is below threshold
fail_under = 80

[html]
directory = htmlcov
title = Validation Service Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True
